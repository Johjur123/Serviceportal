# Multi-Channel Customer Service Hub - Production Environment Template
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Session Security (Generate a secure random string, min 32 characters)
SESSION_SECRET=your-secure-session-secret-here

# Replit Authentication
REPL_ID=your-repl-id
REPLIT_DOMAINS=your-production-domain.com
ISSUER_URL=https://replit.com/oidc

# Application Configuration
NODE_ENV=production
PORT=5000

# Performance & Security Settings
RATE_LIMIT_ENABLED=true
ENABLE_REQUEST_LOGGING=true
CACHE_TTL=300
MAX_CONNECTIONS=100

# Optional: Additional Security Headers
TRUST_PROXY=true
SECURE_COOKIES=true

# Optional: External Service Integration
# Add your API keys for external services here
# WHATSAPP_API_KEY=your-whatsapp-api-key
# INSTAGRAM_API_KEY=your-instagram-api-key
# FACEBOOK_API_KEY=your-facebook-api-key
# EMAIL_SERVICE_API_KEY=your-email-service-api-key